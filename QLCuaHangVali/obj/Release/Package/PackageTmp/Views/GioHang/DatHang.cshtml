                                    Họ tên:
                                    <span>@kh.tenkhachhang</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    Email:
                                    <span>@kh.email</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    Địa chỉ:
                                    <span>@kh.diachi</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    Điện thoại:
                                    <span>@kh.sodienthoai</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

