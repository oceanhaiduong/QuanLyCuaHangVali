@model IEnumerable<QLCuaHangVali.Models.LIENHE>
@{
    ViewBag.Title = "LienHe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- //page -->
<!-- contact page -->
<div class="contact-w3l">
    <div class="container">
        <!-- tittle heading -->
        <h3 class="tittle-w3l">
            Liên Hệ Với Chúng Tôi
            <span class="heading-style">
                <i></i>
                <i></i>
                <i></i>
            </span>
        </h3>
        <!-- //tittle heading -->
        <!-- contact -->
        <div class="contact agileits">
            <div class="contact-agileinfo">
                <div class="contact-form wthree">
                    <form action="#" method="post">
                        @using (Html.BeginForm())
                        {
                            <div class="">
                                <input type="text" name="name" placeholder="Họ và tên" required="">
                            </div>
                            <div class="">
                                <input class="text" type="text" name="subject" placeholder="Tiêu đề" required="">
                            </div>
                            <div class="">
                                <input class="email" type="text" name="sodienthoai" placeholder="SỐ điện thoại" required="">
                            </div>
                            <div class="">
                                <input class="email" type="email" name="email" placeholder="Email" required="">
                            </div>
                            <div class="">
                                <textarea placeholder="Nội dung" name="message" required=""></textarea>
                            </div>
                            <input type="submit" value="Gửi">
                        }
                    </form>
                </div>
                <div class="contact-right wthree">
                    <div class="col-xs-7 contact-text w3-agileits">
                        <h4>Liên hệ :</h4>
                        <p>
                            <i class="fa fa-map-marker"></i> Đại học Hutech Khu Công nghệ Cao Quận 9
                        </p>
                        <p>
                            <i class="fa fa-phone"></i> Số điện thoại : 333 222 3333
                        </p>
                        <p>
                            <i class="fa fa-envelope-o"></i> Email :
                            <a href="mailto:example@mail.com">DaiHocHutech@gmail.com</a>
                        </p>
                    </div>
                    <div class="col-xs-5 contact-agile">
                        <img src="images/contact2.jpg" alt="">
                    </div>
                    <div class="clearfix"> </div>
                </div>
            </div>
        </div>
        <!-- //contact -->
    </div>
</div>
