@model QLCuaHangVali.Models.CHITIETDONHANG

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
@section header{
    <h2 style="text-align: center">Chi Tiết Đơn Hàng</h2>

    <div>

        <hr />
        <dl class="dl-horizontal">
            <table class="table" border="1px" style="text-align: center">
                <tr>
                    <th>Tên khách hàng </th>
                    <td> @Html.DisplayFor(model => model.DONDATHANG.KHACHHANG.tenkhachhang)</td>
                </tr>
                <tr>
                    <th>Vali </th>
                    <td> @Html.DisplayFor(model => model.VALI.tenvali)</td>
                </tr>
                <tr>
                    <th>Số lượng mua </th>
                    <td> @Html.DisplayFor(model => model.soluong)</td>
                </tr>
                <tr>
                    <th>Ngày đặt hàng </th>
                    <td> @Html.DisplayFor(model => model.DONDATHANG.ngaydat)</td>
                </tr>
                <tr>
                    <th>Ngày giao hàng </th>
                    <td> @Html.DisplayFor(model => model.DONDATHANG.ngaygiao)</td>
                </tr>
                <tr>
                    <th>Đơn giá </th>
                    <td> @Html.DisplayFor(model => model.gia)</td>
                </tr>
                <tr>
                    <th>Tổng tiền </th>
                    @{var dongia = Html.DisplayFor(model => model.gia).ToString();
                        var soluong = Html.DisplayFor(model => model.soluong).ToString();
                        decimal tongtien = Convert.ToDecimal(dongia) * Convert.ToDecimal(soluong);
                    }
                <td> @tongtien</td>
                </tr>
            </table>

        </dl>
    </div>
    <p>
        @*@Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |*@
        @Html.ActionLink("Trở về", "Index")
    </p>
}
