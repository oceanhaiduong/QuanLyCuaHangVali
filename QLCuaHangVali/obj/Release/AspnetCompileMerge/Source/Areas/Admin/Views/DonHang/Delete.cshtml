<div>
     
    <hr />
    <dl class="dl-horizontal">
        <table class="table" border="1px" style="text-align: center">
            <tr>
                <th>Tên khách hàng </th>
                <td> @Html.DisplayFor(model => model.KHACHHANG.tenkhachhang)</td>
            </tr>
            <tr>
                <th>Thanh toán </th>
                <td> @Html.DisplayFor(model => model.mathanhtoan)</td>
            </tr>
