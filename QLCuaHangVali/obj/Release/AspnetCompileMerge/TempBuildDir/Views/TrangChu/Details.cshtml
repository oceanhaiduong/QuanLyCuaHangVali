            var soluongton = @Html.DisplayFor(model => model.soluongton);
            var soluongmua = $("#iqQuantity").val();
            var thongbaoloi = "Bạn cần đăng nhập";

            if (soluongmua > soluongton) {
                thongbaoloi = "Số lượng tồn không đủ";
            } else if (soluongmua <= 0) {
                thongbaoloi = "Số lượng không đúng";
            } else {
                 var model = {};
                //lấy id sản phẩm
                model.Id = @Html.DisplayFor(model => model.mavali);
                // lấy số lượng đặt hàng
                model.Quantity = $("#iqQuantity").val();
            }
            debugger;
            $.ajax({
                type: "POST",
                url: '@Url.Action("ThemGiohang", "GioHang")',
                data:  JSON.stringify(model) ,
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    $('#CartCount').text(@Session["Count"] + 1);
                    $('#Soluongton').text(@Session["CapNhatSoLuong"] - $("#iqQuantity").val());
                    Swal.fire({
                        position: 'center',
                        icon: 'success',
                        title: 'Thêm vào giỏ hàng thành công',
                        showConfirmButton: false,
                        timer: 2000
                    });
                },
                error: function () {
                    Swal.fire({
                        icon: 'error',
                        title: thongbaoloi,
                        text: 'Vui lòng thử lại!',
                        showConfirmButton: false,
                        timer: 2500
                    })
                },
            });
            return false;
        });
    });
    </script>

